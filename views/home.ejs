<HTML>
        <HEAD>
        <TITLE> MONGO DB - AGGREGATE </TITLE>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        </HEAD>
        <BODY>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <a class="navbar-brand" href="https://www.mongodb.com/">MongoDB</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <a class="nav-link" href="/">Blog <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/admin/liste">Yönetici</a>
              </li>
            </ul>
          </div>
        </nav>
        <br><br>
        <div class="container">
            <% if(data){%>
                <% data.forEach((data)=>{ %>
            <div class="card" style="width:18rem;float: left;margin-left: 10px;margin-top: 10px;">
                <div class="card-body">
                    <h5 class="card-title"><%= data.title %></h5>
                    <p class="card-text"><%= data.content %></p>
                    <a href="/<%= data.category %>" class="card-link"><%= data.category %></a><br>
                    <small><%= data.author %></small>
                </div>
            </div>
            <% })} else{ %>
                <div class="alert alert-danger" role="alert">
                    Henüz herhangi bir yazı eklenmedi!
                </div>
            <% } %>
        </div>
    </BODY>
</HTML>