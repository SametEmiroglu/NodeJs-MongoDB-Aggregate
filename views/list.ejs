<HTML>
    <HEAD>
    <TITLE> MONGO DB - AGGREGATE </TITLE>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    </HEAD>
    <BODY>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="https://www.mongodb.com/">MongoDB</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Blog <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/admin/ekle">Kayıt Ekle</a>
          </li>
        </ul>
      </div>
    </nav>
    <br><br>
    <div class="container">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Başlık</th>
                <th scope="col">İçerik</th>
                <th scope="col">Kategori</th>
                <th scope="col">Yazar</th>
                <th scope="col">Oluşturulma Zamanı</th>
                <th scope="col">İşlem</th>
              </tr>
            </thead>
            <tbody>
              <% if(data){%>
                <% data.forEach((data)=>{ %>
              <tr>
                <td><%= data.title %></td>
                <td><%= data.content %></td>
                <td><%= data.category %></td>
                <td><%= data.author %></td>
                <td><%= data.creation_time %></td>
                <td><a href="/admin/sil/<%= data._id %>" class="btn btn-danger">Sil</a> <a href="/admin/guncelle/<%= data._id %>" class="btn btn-warning">Güncelle</a></td>
              </tr>
              <% })} else{ %>
              <tr>
                  <td>-</td>
                  <td>-</td>
                  <td>-</td>
                  <td>-</td>
                  <td>-</td>
                  <td>-</td>
                </tr>
              <% } %>
            </tbody>
          </table>
    </div>
    </BODY>
    </HTML>